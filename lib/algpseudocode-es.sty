\algnewcommand\Require{\item[\algorithmicrequire]}%
\algnewcommand\Ensure{\item[\algorithmicensure]}%
\algnewcommand\Return{\algorithmicreturn{} }%
\algnewcommand\Call[2]{\textproc{#1}\ifthenelse{\equal{#2}{}}{}{(#2)}}%
